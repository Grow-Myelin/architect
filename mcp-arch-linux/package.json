    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "semver": "^7.5.4",
    "joi": "^17.11.0",
    "fastify": "^4.24.3",
